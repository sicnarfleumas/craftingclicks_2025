---
const testimonials = [
  { name: "Maya K.", role: "Founder, Bibilicious", quote: "+40% conversion rate after redesign. The process was clear and the results real." },
  { name: "Adam R.", role: "CEO, BigB MMA", quote: "Site is blazing fast and simple to manage. Members love it." },
  { name: "Leah S.", role: "Head of Growth, Quint Ally", quote: "Elegant UX and measurable impact. A partner we trust." },
];
---

<section id="testimonials" aria-labelledby="testimonials-heading" class="section-soft py-20">
  <div class="mx-auto max-w-7xl px-6">
    <h2 id="testimonials-heading" class="text-2xl sm:text-3xl font-bold tracking-tight">What clients say</h2>

    <div class="mt-8 grid grid-cols-1 gap-4 md:grid-cols-3">
      {testimonials.map((t) => (
        <figure class="rounded-2xl border border-neutral-200/70 bg-white p-6 shadow-sm">
          <blockquote class="text-sm text-neutral-700">“{t.quote}”</blockquote>
          <figcaption class="mt-3 text-sm font-medium text-neutral-900">{t.name} <span class="font-normal text-neutral-500">— {t.role}</span></figcaption>
        </figure>
      ))}
    </div>
  </div>
</section>


