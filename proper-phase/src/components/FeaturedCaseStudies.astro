---
import { caseStudies } from "../data/caseStudies";
const featured = caseStudies.slice(0, 3);
---

<section id="work" aria-labelledby="featured-heading" class="section-alt py-20">
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex items-end justify-between gap-4">
      <div>
        <h2 id="featured-heading" class="text-2xl sm:text-3xl font-bold tracking-tight">Featured Case Studies</h2>
        <p class="mt-2 text-neutral-600">A few examples of work where design and performance meet impact.</p>
      </div>
      <a href="/case-studies" class="text-sm font-medium text-orange-600">View all</a>
    </div>

    <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {featured.map((c) => (
        <a href={`/case-studies/${c.slug}`} class="group relative overflow-hidden rounded-2xl border border-neutral-200/70 bg-white shadow-sm">
          <img src={c.coverImage} alt={c.title} loading="lazy" class="h-56 w-full object-cover transition-transform duration-300 group-hover:scale-105" />
          <div class="p-5">
            <div class="text-xs text-neutral-500">{c.client}</div>
            <h3 class="mt-1 text-lg font-semibold leading-tight">{c.title}</h3>
            <p class="mt-1 line-clamp-2 text-sm text-neutral-600">{c.description}</p>
            <div class="mt-3 flex flex-wrap gap-2">
              {c.tags.slice(0, 3).map((t) => (
                <span class="rounded-full bg-neutral-100 px-2 py-0.5 text-xs">{t}</span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>


