  { name: "Alex", role: "Design Lead", img: "https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg" },
  { name: "Sam", role: "Frontend", img: "https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg" },
