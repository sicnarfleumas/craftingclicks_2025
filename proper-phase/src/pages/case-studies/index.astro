---
import Layout from "../../layouts/Layout.astro";
import { caseStudies as studies } from "../../data/caseStudies";
---

<Layout title="Case Studies â€” Crafting Clicks">
  <main class="mx-auto max-w-7xl px-6 py-16">
    <h1 class="text-4xl font-extrabold tracking-tight">Our Work</h1>
    <p class="mt-2 max-w-2xl text-neutral-600">Selected projects showcasing strategy, design, and performance.</p>

    <div class="mt-10 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {studies.map((s) => (
        <a href={`/case-studies/${s.slug}`} class="group relative overflow-hidden rounded-2xl border border-black/10 bg-white shadow-sm">
          {s.coverImage && (
            <img src={s.coverImage} alt={s.title} class="h-56 w-full object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
          )}
          <div class="p-5">
            <div class="text-xs text-neutral-500">{s.client}</div>
            <h2 class="mt-1 text-lg font-semibold leading-tight">{s.title}</h2>
            <p class="mt-1 line-clamp-2 text-sm text-neutral-600">{s.description}</p>
            <div class="mt-3 flex flex-wrap gap-2">
              {s.tags.slice(0, 3).map((t) => (
                <span class="rounded-full bg-neutral-100 px-2 py-0.5 text-xs">{t}</span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>


